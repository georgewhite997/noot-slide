generator client {
  provider = "prisma-client-js"
  output   = "../prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  wallet       String        @unique
  highestScore Int           @default(0)
  fishes       Int           @default(0)
  userUpgrades UserUpgrade[] // Relation to UserUpgrade
}

model Upgrade {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  unit         String
  upgradeLabel String
  iconPath     String
  levels       Json
  userUpgrades UserUpgrade[]
}

model UserUpgrade {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  upgrade   Upgrade @relation(fields: [upgradeId], references: [id])
  upgradeId Int
  level     Int
}
